<mvc:View xmlns:form="sap.ui.layout.form" controllerName="de.abatgroup.blackjackui5.controller.Highscore"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="highscorePage" title="{i18n>highscoreTitle}">
        <content>
            <HBox id="highscoreHBox">
                <Table id="highscoreTable"
                    width="100%"
                    items="{
                        path: '/Coin',
                        sorter: [
                            {path: 'AbatCoin', descending: true}
                        ]
                    }"
                    growing="true"
                    growingThreshold="10"

                    >
                    <headerToolbar>
                        <OverflowToolbar id="hsHeaderOT">
                            <content>
                                <Title id="hsHeaderTitle" text="{i18n>highscoreHeaderTitle}"></Title>
                                <ToolbarSpacer id="hsHeaderToolbarSpacer"></ToolbarSpacer>
                                <Switch id="hsHeaderSwitch" customTextOff="A" customTextOn="H"
                                    change=".onFilterChange"></Switch>
                                <SearchField width="20%" id="hsHeaderSearchField" search=".onFilterPlayers"></SearchField>
                            </content>
                        </OverflowToolbar>
                    </headerToolbar>
                    <columns>
                        <Column id="hsCol1">
                            <Text id="hsColText1" text="{i18n>highscoreColumnText1}"></Text>
                        </Column>
                        <Column id="hsCol2">
                            <Text id="hsColText2" text="{i18n>highscoreColumnText2}"></Text>
                        </Column>
                        <Column id="hsCol3">
                            <Text id="hsColText3" text="{i18n>highscoreColumnText3}"></Text>
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem id="hsCLI1" >
                            <cells>

                                <ObjectIdentifier id="hsOI1" text="{Abbreviation}"></ObjectIdentifier>
                                <Text id="hsText2" text="{AbatCoin}"></Text>
                                <Text id="hsText3" text="{Highscore}"></Text>
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </HBox>
            
            <form:SimpleForm id="highscoreSimpleForm" visible="true">
                <Toolbar id="hsSFToolbar">
                    <Title id="hsSFToolbarTitle" text="{i18n>highscoreSFToolbarTitle}"></Title>
                </Toolbar>
                <Text id="hsSFLabel1" text="{user>/name}"></Text>
                <Text id="hsSFLabel2" text="0 abatCoins"></Text>
                <Text id="hsSFLabel3" text="0 Bonus"></Text>
                <Text id="hsSFLabel4" text="0 Highscore"></Text>
                <Button id="hsRefreshBalanceButton" text="{i18n>refreshBalance}" icon="sap-icon://refresh"
                    press=".onRefreshBalance"></Button>
            </form:SimpleForm>
        </content>
    </Page>
</mvc:View>