<mvc:View
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
    controllerName="de.abatgroup.blackjackui5.controller.Shop"
    xmlns:custom="de.abatgroup.blackjackui5.control"
    xmlns:form="sap.ui.layout.form">

    <Page id="shopPage" title="Shop">
        <content>
            <form:SimpleForm id="shopSimpleForm" visible="true">
                <Toolbar id="shopSFToolbar">
                    <Title id="shopSFToolbarTitle" text="{i18n>highscoreSFToolbarTitle}"></Title>
                </Toolbar>
                <Text id="shopSFLabel1" text="{user>/name}"></Text>
                <Text id="shopSFLabel2" text="{shop>/available} abatCoins"></Text>
                <Button id="shopNavigateToCustomizeButton" text="{i18n>shopNavToCustomize}" icon="sap-icon://customize"
                    press=".onCustomize"></Button>
            </form:SimpleForm>
            <Panel id="shopDeckPanel" 
                expandable="true" headerText="{i18n>deckPanel}" 
                width="auto" class="sapUiResponsiveMargin"
                expanded="true">
                <content>
                    <Label id="shopBasicLabel" text="{i18n>shopBasicText}"
                    design="Bold" class="sapUiTinyMarginTop sapUiTinyMarginBeginEnd"></Label>
                    <Toolbar id="horizontalLineShop1" width="100%" height="1px"
                                class="sapUiTinyMarginTopBottom"></Toolbar>
                    
                    <HBox id="shopBasicHBox">
                        <!-- Black Tile -->
                        <custom:ImageTextTile id="shopBlackItem"
                                        src="{module>/path}{img>/decks/black}"
                                        text1="Black"
                                        text2="100"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Blue Tile -->
                        <custom:ImageTextTile id="shopBlueItem"
                                        src="{module>/path}{img>/decks/blue}"
                                        text1="Blue"
                                        text2="100"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Green Tile -->
                        <custom:ImageTextTile id="shopGreenItem"
                                        src="{module>/path}{img>/decks/green}"
                                        text1="Green"
                                        text2="100"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Red Tile -->
                        <custom:ImageTextTile id="shopRedItem"
                                        src="{module>/path}{img>/decks/red}"
                                        text1="Red"
                                        text2="100"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Yellow Tile -->
                        <custom:ImageTextTile id="shopYellowItem"
                                        src="{module>/path}{img>/decks/yellow}"
                                        text1="Yellow"
                                        text2="100"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                    </HBox>
                    <Label id="shopMediumLabel" text="{i18n>shopMediumText}"
                    design="Bold" class="sapUiTinyMarginTop sapUiTinyMarginBeginEnd"></Label>
                    <Toolbar id="horizontalLineShop2" width="100%" height="1px"
                                class="sapUiTinyMarginTopBottom"></Toolbar>
                    <HBox id="shopMediumHBox" >
                        <!-- Abandoned Tile -->
                        <custom:ImageTextTile id="shopAbandonedItem"
                                        src="{module>/path}{img>/decks/abandoned}"
                                        text1="Abandoned"
                                        text2="200"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <custom:ImageTextTile id="shopFoilItem"
                                        src="{module>/path}{img>/decks/foil}"
                                        text1="Foil"
                                        text2="300"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <!-- Silver Tile -->
                        <custom:ImageTextTile id="shopSilverItem"
                                        src="{module>/path}{img>/decks/silver}"
                                        text1="Silver"
                                        text2="400"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <custom:ImageTextTile id="shopPolychromeItem"
                                        src="{module>/path}{img>/decks/polychrome}"
                                        text1="Polychrome"
                                        text2="500"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                    </HBox>
                    <Label id="shopPatternLabel" text="{i18n>shopPatternText}"
                    design="Bold" class="sapUiTinyMarginTop sapUiTinyMarginBeginEnd"></Label>
                    <Toolbar id="horizontalLineShop5" width="100%" height="1px"
                                class="sapUiTinyMarginTopBottom"></Toolbar>
                    <HBox id="shopPatternHBox" >
                        <!-- Braided Tile -->
                        <custom:ImageTextTile id="shopBraidedItem"
                                        src="{module>/path}{img>/decks/braided}"
                                        text1="Braided"
                                        text2="1000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <!-- Challenge Tile -->
                        <custom:ImageTextTile id="shopChallengeItem"
                                        src="{module>/path}{img>/decks/challenge}"
                                        text1="Challenge"
                                        text2="1500"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <custom:ImageTextTile id="shopCheckeredItem"
                                        src="{module>/path}{img>/decks/checkered}"
                                        text1="Checkered"
                                        text2="1500"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        
                    </HBox>
                    <Label id="shopSymbolLabel" text="{i18n>shopSymbolText}"
                    design="Bold" class="sapUiTinyMarginTop sapUiTinyMarginBeginEnd"></Label>
                    <Toolbar id="horizontalLineShop3" width="100%" height="1px"
                                class="sapUiTinyMarginTopBottom"></Toolbar>
                    <HBox id="shopSymbolHBox">
                        <!-- Anaglyph Tile -->
                        <custom:ImageTextTile id="shopAnaglyphItem"
                                        src="{module>/path}{img>/decks/anaglyph}"
                                        text1="Anaglyph"
                                        text2="2500"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <!-- Erratic Tile -->
                        <custom:ImageTextTile id="shopErraticItem"
                                        src="{module>/path}{img>/decks/erratic}"
                                        text1="Erratic"
                                        text2="3000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <custom:ImageTextTile id="shopIntersectionItem"
                                        src="{module>/path}{img>/decks/intersection}"
                                        text1="Intersection"
                                        text2="3500"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        <!-- Zodiac Tile -->
                        <custom:ImageTextTile id="shopZodiacItem"
                                        src="{module>/path}{img>/decks/zodiac}"
                                        text1="Zodiac"
                                        text2="5000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                        
                    </HBox>
                    <Label id="shopFreeHandLabel" text="{i18n>shopFreeHandText}"
                    design="Bold" class="sapUiTinyMarginTop sapUiTinyMarginBeginEnd"></Label>
                    <Toolbar id="horizontalLineShop4" width="100%" height="1px"
                                class="sapUiTinyMarginTopBottom"></Toolbar>
                    <HBox id="shopFreeHandHBox">
                        <!-- Ghost Tile -->
                        <custom:ImageTextTile id="shopGhostItem"
                                        src="{module>/path}{img>/decks/ghost}"
                                        text1="Ghost"
                                        text2="10000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Magic Tile -->
                        <custom:ImageTextTile id="shopMagicItem"
                                        src="{module>/path}{img>/decks/magic}"
                                        text1="Magic"
                                        text2="10000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Nebula Tile -->
                        <custom:ImageTextTile id="shopNebulaItem"
                                        src="{module>/path}{img>/decks/nebula}"
                                        text1="Nebula"
                                        text2="20000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Painted Tile -->
                        <custom:ImageTextTile id="shopPaintedItem"
                                        src="{module>/path}{img>/decks/painted}"
                                        text1="Painted"
                                        text2="10000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />

                        <!-- Plasma Tile -->
                        <custom:ImageTextTile id="shopPlasmaItem"
                                        src="{module>/path}{img>/decks/plasma}"
                                        text1="Plasma"
                                        text2="10000"
                                        width="200px"
                                        height="300px"
                                        press=".onPurchasingDeck" />
                    </HBox>
                </content>
            </Panel>
            
        </content>
    </Page>

</mvc:View>