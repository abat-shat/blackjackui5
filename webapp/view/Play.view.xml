<mvc:View controllerName="de.abatgroup.blackjackui5.controller.Play"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="playPage" title="{i18n>playTitle}">
        <content>
            <HBox id="playHBox">
                
                <VBox id="cardSideVBox">
                    <HBox id="dealerHandHBox" class="sapUiMediumMarginTop">
                        <Image id="dealerCard1"   
                            src="{img>/decks/red}" ></Image>
                        <Image id="dealerCard2"  
                            src="{img>/decks/red}"></Image>
                        <Image id="dealerCard3"  
                        src="{img>/decks/red}"></Image>
                        <Image id="dealerCard4"  
                        src="{img>/decks/red}"></Image>
                        <Image id="dealerCard5"  
                        src="{img>/decks/red}"></Image>
                    </HBox>
                    <HBox id="dealerHandTextHBox">
                        <Text id="dealerHandTextInfo" text="{i18n>dealerHandText}"
                            class="sapUiTinyMarginBeginEnd"></Text>
                        <Text id="dealerHandTextOutput" text="{tabletop>/dealer/score}"></Text>
                    </HBox>

                    <HBox id="playerHandHBox" class="sapUiMediumMarginTop">
                        <Image id="playerCard1"  
                            src="{img>/decks/green}"></Image>
                        <Image id="playerCard2"  
                            src="{img>/decks/green}"></Image>
                        <Image id="playerCard3"  
                        src="{img>/decks/green}"></Image>
                        <Image id="playerCard4"  
                        src="{img>/decks/green}"></Image>
                        <Image id="playerCard5"  
                        src="{img>/decks/green}"></Image>
                    </HBox>
                    <HBox id="playerHandTextHBox">
                        <Text id="playerHandTextInfo" text="{i18n>playerHandText}"
                            class="sapUiTinyMarginBeginEnd"></Text>
                        <Text id="playerHandTextOutput" text="{tabletop>/player/score}"></Text>
                        <Text id="mainHandTextResult" text="{tabletop>/result/main/text}"
                            class="sapUiTinyMarginBeginEnd" visible="false"></Text>
                        <Text id="mainHandCoinResult" text="{tabletop>/result/main/coin}"
                            visible="false"></Text>
                    </HBox>
                    <HBox id="playerSplitHandHBox" visible="false"
                        class="sapUiMediumMarginTop">
                        <Image id="playerSplitCard1"  
                            src="{img>/decks/green}"></Image>
                        <Image id="playerSplitCard2"  
                            src="{img>/decks/green}"></Image>
                        <Image id="playerSplitCard3"  
                        src="{img>/decks/green}"></Image>
                        <Image id="playerSplitCard4"  
                        src="{img>/decks/green}"></Image>
                        <Image id="playerSplitCard5"  
                        src="{img>/decks/green}"></Image>
                    </HBox>
                    <HBox id="playerSplitHandTextHBox" visible="false">
                        <Text id="playerSplitHandTextInfo" text="{i18n>playerSplitHandText}"
                            class="sapUiTinyMarginBeginEnd"></Text>
                        <Text id="playerSplitHandTextOutput" text="{tabletop>/player/split/score}"></Text>
                        <Text id="splitHandTextResult" text="{tabletop>/result/split/text}"
                            class="sapUiTinyMarginBeginEnd" visible="false"></Text>
                        <Text id="splitHandCoinResult" text="{tabletop>/result/split/coin}"
                            visible="false"></Text>
                    </HBox>
                    
                </VBox>

                <VBox id="actionSideVBox" class="sapUiMediumMarginTop">
                    <HBox id="playerCoinHBox">
                        <Text id="playerCoinsTextInfo" text="{i18n>playerCoinsText}"
                            class="sapUiTinyMarginBeginEnd"></Text>
                        <Text id="playerCoinsAmount" text="{coins>/user/available}"></Text>
                    </HBox>
                    <HBox id="playerBonusHBox">
                        <Text id="playerBonusTextInfo" text="{i18n>playerBonusText}"
                            class="sapUiTinyMarginBeginEnd"></Text>
                        <Text id="playerBonusAmount" text="{coins>/user/bonus}"></Text>
                    </HBox>
                    <HBox id="coinInputHBox">
                        <Input id="coinInput"
                            liveChange=".onCoinAmountInput"
                            description="abatCoins"
                            value="{coins>/bet/amount}"
                            class="sapUiTinyMarginBeginEnd"
                            enabled="false"></Input>
                        <Button id="betButton" text="{i18n>betButton}" width="153px"
                            press=".onConfirmBetCoinsAmount"
                            enabled="false"></Button>
                    </HBox>
                    <HBox id="coinInputFixedValueHBox">
                        <Button id="add10Button" text="10" class="sapUiTinyMarginBegin"
                            press=".onAddToBetAmount(10)" enabled="false"></Button>
                        <Button id="add50Button" text="50" class="sapUiTinyMarginBegin"
                            press=".onAddToBetAmount(50)" enabled="false"></Button>
                        <Button id="add100Button" text="100" class="sapUiTinyMarginBegin"
                            press=".onAddToBetAmount(100)" enabled="false"></Button>
                        <Button id="allInButton" text="{i18n>allInButton}" class="sapUiTinyMarginBegin"
                            press=".onAllIn" enabled="false"></Button>
                    </HBox>
                    


                    <HBox id="playButtonGroup1">
                        <Button id="drawButton" text="{i18n>drawButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onDraw"></Button>
                        <Button id="surrenderButton" text="{i18n>surrenderButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onSurrender"></Button>
                    </HBox>
                    <HBox id="playButtonGroup2">
                        <Button id="splitButton" text="{i18n>splitButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onSplit"></Button>
                        <Button id="doubleDownButton" text="{i18n>doubleDownButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onDoubleDown"></Button>
                    </HBox>
                    <HBox id="playButtonGroup3">
                        <Button id="hitButton" text="{i18n>hitButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onHit" ></Button>
                        <Button id="stayButton" text="{i18n>stayButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onStay" ></Button>
                    </HBox>
                    <HBox id="playButtonGroup4">
                        <Button id="continueButton" text="{i18n>playNextButton}" class="sapUiTinyMargin"
                            width="200px" enabled="false" press=".onContinue"></Button>
                        <Button id="newRoundButton" text="{i18n>newRoundButton}" class="sapUiTinyMargin"
                            width="200px"
                            press=".onNewRound"></Button>
                        
                    </HBox>
                    <Button id="test" press=".onTest"></Button>
                </VBox>
            </HBox>
        </content>
    </Page>
</mvc:View>