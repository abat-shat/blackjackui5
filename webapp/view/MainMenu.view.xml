<mvc:View controllerName="de.abatgroup.blackjackui5.controller.MainMenu"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="mainMenuPage" title="{i18n>mainMenuTitle}">
        <content>
            <VBox id="mainMenuVBox" fitContainer="false"
                alignItems="Center">
                <items>
                    <List id="mainMenuList"
                        headerText="{i18n>mainMenuListTitle}">
                        <ActionListItem id="mainMenuAction1"
                            text="{i18n>mainMenuPlayButton}"
                            press=".onPressPlayButton" />
                        <ActionListItem id="mainMenuAction2"
                            text="{i18n>mainMenuHighscoreButton}"
                            press=".onPressHighscoreButton" />
                        <ActionListItem id="mainMenuAction3"
                            text="{i18n>mainMenuRegisterButton}"
                            press=".onPressRegister" visible="{= !${user>/isRegistered} }"></ActionListItem>
                        <ActionListItem id="mainMenuAction4"
                            text="{i18n>mainMenuDailyLoginButton}"
                            press=".onDailyLogin"></ActionListItem>
                        <ActionListItem id="mainMenuAction5"
                            text="{i18n>mainMenuInviteFriend}"
                            press=".onInviteFriend" visible="false"></ActionListItem>
                        <ActionListItem id="mainMenuAction6"
                            text="{i18n>mainMenuBankVault}"
                            press=".onEnteringBankVault" visible="{admin>/admin}"></ActionListItem>
                        <ActionListItem id="mainMenuAction7"
                            text="{i18n>mainMenuShop}"
                            press=".onPressShopButton"></ActionListItem>
                    </List>
                </items>
            </VBox>
            
            
        </content>
    </Page>
</mvc:View>